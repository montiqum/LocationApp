@model LocationApp.Models.Location

<!DOCTYPE html>
<html>
<head>
    <title>Location app</title>
    <meta name="viewport" content="width=device-width"/>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet"/>
</head>
<body>
    <div class="card shadow col-xs-6 col-sm-5 col-md-4 col-lg-3" style="margin:auto">
        <p class="card-header">Location</p>
        <form method="post" class="card-body">
            <p> @Model.City <br/>
                @Model.State </p>
            <input value="@Model.Zip" name="zip"/>
            <button tyoe="submit"> Get Location</button>
        </form>
        <p>Powered by Ziptastic</p>
    </div>
</body>
</html>
